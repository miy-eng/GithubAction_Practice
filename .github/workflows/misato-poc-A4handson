name: misato-poc-A4handson

on:
  push:
    branches:
      - main  # デプロイをトリガーするブランチを指定

permissions:
  id-token: write
  contents: read

env:
  sys-name: nuro
  env-name: poc
  app-name: handson-A4
  deploy-region: ap-northeast-1

jobs:
  deploy:
    name: Deploy to AWS
    runs-on: ubuntu-latest
    steps:
    - name: Checkout
      uses: actions/checkout@v2 
    - name: Configure AWS credentials
      uses: aws-actions/configure-aws-credentials@v1
      with:
        aws-region: ${{ env.deploy-region }}
        role-to-assume: ${{ secrets.AWS_ROLE_ARN_POC }}
        role-session-name: GitHubActions-${{ github.run_id }}
    - name: deploy
      run: |
        aws cloudformation deploy \
          --template-file ./S3creation.yaml \
          --stack-name ${{ env.sys-name }}-${{ env.env-name }}-${{ github.event.repository.name }}-s3 \